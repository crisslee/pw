<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <CheckBox
            android:id="@+id/lock_item_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center"
            android:button="@drawable/list_item_selector" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="17dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lock_item_title"
                android:textSize="16sp"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lock_item_sub"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/black2_90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/lock_item_sub2"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/black2_90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <TextView
            android:id="@+id/lock_item_reject"
            android:text="@string/lock_reject"
            android:textSize="16sp"
            android:textColor="#597891"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#33000000"
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/lock_item_approve"
            android:text="@string/lock_approve"
            android:textSize="16sp"
            android:textColor="#597891"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="#F0F0F0" />

</LinearLayout>