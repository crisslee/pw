<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pop_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/space_2x"
            android:paddingLeft="@dimen/space_6x"
            android:paddingRight="@dimen/space_6x"
            android:paddingTop="@dimen/space_2x"
            android:text="@string/change_headicon_hint"
            android:textColor="@color/color_text_l"
            android:textSize="@dimen/text"
            android:visibility="gone" />

        <View
            android:id="@+id/pop_seperator1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collect_seperator_thin"
            android:background="@color/color_seperator"
            android:visibility="gone" />

        <GridView
            android:id="@+id/gridViewShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/transparent"
            android:numColumns="4"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/pop_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/space_3x"
        android:text="@string/cancel"
        android:textColor="@color/color_text_h"
        android:textSize="@dimen/text_l" />

</LinearLayout>