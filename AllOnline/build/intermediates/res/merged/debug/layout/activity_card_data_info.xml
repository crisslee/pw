<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray"
    >

    <com.coomix.app.all.widget.MyActionbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </com.coomix.app.all.widget.MyActionbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!--年卡信息-->
            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3x"
                android:paddingLeft="@dimen/space_3x"
                android:text="年卡信息"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <RelativeLayout
                android:id="@+id/rlCardNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardTitle"
                >
                <TextView
                    android:id="@+id/carNoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="卡号"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <TextView
                    android:id="@+id/cardNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingRight="@dimen/space_2x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="123"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/carNoTitle"
                    android:background="@color/divider"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlCardIsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlCardNo"
                >
                <TextView
                    android:id="@+id/carIspTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="运营商"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <TextView
                    android:id="@+id/cardIsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingRight="@dimen/space_2x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="中国移动"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/carIspTitle"
                    android:background="@color/divider"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlCardIccid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlCardIsp"
                >
                <TextView
                    android:id="@+id/carIccidTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="ICCID"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <TextView
                    android:id="@+id/cardIccid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingRight="@dimen/space_2x"
                    android:paddingTop="@dimen/space_2x"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/carIccidTitle"
                    android:background="@color/divider"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlCardExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlCardIccid"
                >
                <TextView
                    android:id="@+id/carExpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="服务期止"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <TextView
                    android:id="@+id/cardExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingRight="@dimen/space_2x"
                    android:paddingTop="@dimen/space_2x"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/carExpTitle"
                    android:background="@color/divider"
                    />
            </RelativeLayout>

            <!--套餐信息-->
            <TextView
                android:id="@+id/dataTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4x"
                android:paddingLeft="@dimen/space_3x"
                android:text="套餐信息"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlCardExp"
                />
            <RelativeLayout
                android:id="@+id/rlData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dataTitle"
                >
                <TextView
                    android:id="@+id/dataTotalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="@string/data_total"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <TextView
                    android:id="@+id/dataTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingRight="@dimen/space_2x"
                    android:paddingTop="@dimen/space_2x"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/dataTotalTitle"
                    android:background="@color/divider"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDataLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlData"
                >
                <TextView
                    android:id="@+id/dataLeftTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="@string/data_left"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <TextView
                    android:id="@+id/dataLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingRight="@dimen/space_2x"
                    android:paddingTop="@dimen/space_2x"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/dataLeftTitle"
                    android:background="@color/divider"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDataUsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlDataLeft"
                >
                <TextView
                    android:id="@+id/dataUsedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/space_2x"
                    android:text="@string/data_used"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <TextView
                    android:id="@+id/dataUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/space_2x"
                    android:paddingRight="@dimen/space_2x"
                    android:paddingTop="@dimen/space_2x"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/text_l"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/dataUsedTitle"
                    android:background="@color/divider"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/cardCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4x"
                android:layout_marginRight="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_5x"
                android:background="@drawable/login_btn_enable"
                android:gravity="center"
                android:paddingBottom="@dimen/space_2x"
                android:paddingTop="@dimen/space_2x"
                android:text="年卡续费"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlDataUsed"
                />

            <TextView
                android:id="@+id/dataCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4x"
                android:layout_marginRight="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_4x"
                android:background="@drawable/login_btn_enable"
                android:gravity="center"
                android:paddingBottom="@dimen/space_2x"
                android:paddingTop="@dimen/space_2x"
                android:text="流量续费"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize"
                app:layout_constraintTop_toBottomOf="@id/cardCharge"
                />
        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>