<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <com.coomix.app.all.widget.MyActionbar
        android:id="@+id/mineActionbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_bg"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/setting_bg" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_show_thf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="11dip"
                android:paddingTop="11dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="@string/sp_name"
                    android:textColor="@color/text_black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/spName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:textColor="#8F8E94"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="15dip"
                android:background="@color/line_show_thf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="11dip"
                android:paddingTop="11dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="@string/sp_contact"
                    android:textColor="@color/text_black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/spContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:textColor="#8F8E94"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="15dip"
                android:background="@color/line_show_thf" />

            <RelativeLayout
                android:id="@+id/ll_phoneCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_action_bar_item_bg_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="11dip"
                android:paddingTop="11dip">

                <TextView
                    android:id="@+id/ffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="@string/sp_phone"
                    android:textColor="@color/text_black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/spPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@id/ffff"
                    android:gravity="right"
                    android:textColor="@color/headbg"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="15dip"
                android:background="@color/line_show_thf" />

            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bottom_action_bar_item_bg_selector"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:paddingBottom="3dip"
                android:paddingTop="3dip">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:layout_marginLeft="15dip"
                    android:gravity="left|center_vertical"
                    android:text="@string/sp_addr"
                    android:textColor="@color/text_black"
                    android:textSize="17sp" />

                <com.coomix.app.all.widget.TextViewEx
                    android:id="@+id/spAddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/headbg"
                    android:textSize="15sp" />

            </LinearLayout>
            <!--android:text="深圳市宝安区宝源路名优工业品中心B3区325，深圳市宝安区宝源路"-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_show_thf" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>