<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/space_2x"
              android:layout_marginRight="@dimen/space_2x"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/popwindow_collect_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/color_text_l"
            android:textSize="@dimen/text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/tr_divider"/>

        <ListView
            android:id="@+id/pop_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/tr_divider"
            android:dividerHeight="0.3px"
            android:paddingLeft="@dimen/space_3x"
            android:listSelector="@drawable/list_white_selector"
            android:paddingRight="@dimen/space_3x"/>

    </LinearLayout>


    <TextView
        android:id="@+id/pop_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="@drawable/popwindow_collect_bg"
        android:gravity="center"
        android:padding="@dimen/space_3x"
        android:text="@string/cancel"
        android:textColor="@color/color_text_l"
        android:textSize="@dimen/text_l"/>

</LinearLayout>