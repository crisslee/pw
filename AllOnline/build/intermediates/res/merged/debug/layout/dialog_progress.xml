<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" 
    android:layout_width="wrap_content"
    android:background="@drawable/dialog2_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
	
    <!-- <ProgressBar 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:padding="@dimen/padding" /> -->
    <ProgressBar
		style="@style/myProgressBarStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:indeterminateDuration="700"
		android:indeterminateDrawable="@drawable/ease_progressbar_bg"
        android:padding="@dimen/padding" />
    <TextView 
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/community_loading"
        android:textColor="@color/eboard_text_normal"
        android:textSize="@dimen/textsize_small"
        android:paddingRight="@dimen/padding" />
</LinearLayout>