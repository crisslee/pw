<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <com.coomix.app.all.widget.MyActionbar
        android:id="@+id/mineActionbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mineActionbar"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <!--<ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/activity_icon" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginTop="35dp"
            android:orientation="horizontal" >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_m_x"
                android:text="@string/act_input_hint_name"/>
            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_2x"
                android:layout_marginRight="@dimen/space_2x"
                android:gravity="center_vertical|left"
                android:hint="@string/act_input_hint_must"
                android:imeOptions="actionDone"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/act_singn_input_color"
                android:textColorHint="@color/register_hint_text"
                android:textSize="@dimen/text_m_x"
                android:background="@color/transparent" />
        </LinearLayout>
        <View
            android:id="@+id/gridLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator_thin"
            android:background="@color/seperator_thin"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginTop="@dimen/community_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_m_x"
                android:text="@string/act_input_hint_tel" />
            <EditText
                android:id="@+id/editTextTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_2x"
                android:layout_marginRight="@dimen/space_2x"
                android:gravity="center_vertical|left"
                android:hint="@string/act_input_hint_must"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/act_singn_input_color"
                android:textColorHint="@color/register_hint_text"
                android:textSize="@dimen/text_m_x"
                android:background="@color/transparent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator_thin"
            android:background="@color/seperator_thin"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginTop="@dimen/community_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_m_x"
                android:text="@string/act_input_hint_wx" />
            <EditText
                android:id="@+id/editTextQQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_2x"
                android:layout_marginRight="@dimen/space_2x"
                android:gravity="center_vertical|left"
                android:hint="@string/act_input_hint_must"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/act_singn_input_color"
                android:textColorHint="@color/register_hint_text"
                android:background="@color/transparent"
                android:textSize="@dimen/text_m_x" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator_thin"
            android:background="@color/seperator_thin"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginTop="@dimen/community_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_m_x"
                android:text="@string/act_input_hint_addr" />
            <EditText
                android:id="@+id/editTextAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_2x"
                android:layout_marginRight="@dimen/space_2x"
                android:gravity="center_vertical|left"
                android:hint="@string/act_input_hint_must"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="@color/act_singn_input_color"
                android:textColorHint="@color/register_hint_text"
                android:background="@color/transparent"
                android:textSize="@dimen/text_m_x" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator_thin"
            android:background="@color/seperator_thin"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginTop="@dimen/community_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginTop="@dimen/space_3x"
            android:gravity="center_vertical|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/checkImageAgreement"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|left"
                android:padding="@dimen/padding_half"
                android:src="@drawable/agreement_bg_selector"
                android:textSize="@dimen/text_m_x" />

            <TextView
                android:id="@+id/checkBoxAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/activity_check_agreen"
                android:textSize="@dimen/text_m_x" />

            <TextView
                android:id="@+id/textViewLiability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/disclaimer_of_liability"
                android:textColor="@color/register_blue"
                android:textSize="@dimen/text_m_x"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_marginBottom="@dimen/padding_half"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewCommit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_act_bottom_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/rounded_corners_bg_blue"
            android:gravity="center"
            android:text="@string/commit"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_xbig" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_register_note"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginLeft="@dimen/topic_horizon_padding"
            android:layout_marginRight="@dimen/topic_horizon_padding"
            android:textColor="@color/color_text_l"
            android:textSize="@dimen/text_m" />
    </LinearLayout>

</RelativeLayout>