<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/divider">

    <com.coomix.app.all.widget.MyActionbar
        android:id="@+id/mineActionbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/textViewDevName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_3x"
        android:paddingTop="23dp"
        android:paddingBottom="23dp"
        android:background="@color/white"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_l"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="0.5dp"
        android:src="@color/white"/>

    <TextView
        android:id="@+id/textViewCardTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_3x"
        android:paddingTop="23dp"
        android:paddingBottom="23dp"
        android:background="@color/white"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_l"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/textViewCardPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_3x"
        android:paddingTop="23dp"
        android:paddingBottom="23dp"
        android:background="@color/white"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_l"/>

    <TextView
        android:id="@+id/textViewRecharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_3x"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/corner_blue_black"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/to_recharge"
        android:textColor="@color/white"
        android:textSize="@dimen/text_l"/>

    <TextView
        android:id="@+id/textViewReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_3x"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_l"/>

</LinearLayout>