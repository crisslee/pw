<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginLeft="@dimen/space_2x"
              android:layout_marginRight="@dimen/space_2x"
              android:layout_marginTop="@dimen/space_2x"
              android:layout_marginBottom="@dimen/space_2x"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/act_register_top_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/space_2x"
        android:paddingRight="@dimen/space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMainTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text"/>

        <ImageView
            android:id="@+id/imageViewClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space"
            android:src="@drawable/pop_close"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/act_register_bottom_bg"
        android:orientation="vertical">


    </LinearLayout>


</LinearLayout>