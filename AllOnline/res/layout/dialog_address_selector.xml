<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/space_2x"
        android:text="@string/select_address"
        android:textColor="@color/color_text_l"
        android:textSize="@dimen/text"/>

    <ImageView
        android:id="@+id/popImageViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/space_2x"
        android:src="@drawable/pop_close"/>

    <LinearLayout
        android:id="@+id/selectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewSelect1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_2x"
            android:text="@string/pls_select"
            android:textColor="@color/address_text_color_selector"
            android:textSize="@dimen/text"/>

        <TextView
            android:id="@+id/textViewSelect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_2x"
            android:text="@string/pls_select"
            android:textColor="@color/address_text_color_selector"
            android:textSize="@dimen/text"/>

        <TextView
            android:id="@+id/textViewSelect3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_2x"
            android:text="@string/pls_select"
            android:textColor="@color/address_text_color_selector"
            android:textSize="@dimen/text"/>

    </LinearLayout>

    <View
        android:id="@+id/gridLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_text_l"
        android:layout_below="@+id/selectLayout"/>

    <ListView
        android:id="@+id/listViewAddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gridLine"
        android:listSelector="@drawable/list_white_selector"
        android:paddingLeft="@dimen/space_2x"
        android:divider="@color/gray_5"
        android:dividerHeight="0.5dp"
        android:paddingRight="@dimen/space_2x"/>

</RelativeLayout>