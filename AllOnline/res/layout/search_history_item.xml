<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_3x"
        android:drawableLeft="@drawable/latest_search"
        android:drawablePadding="@dimen/space_2x"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/text_black"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/imageViewDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="@dimen/space_3x"
        android:src="@drawable/search_delete" />

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/textViewName"
        android:layout_marginLeft="@dimen/space_3x"
        android:background="@color/divider"/>

</RelativeLayout>