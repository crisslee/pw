<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_infowindow_bg"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/car_name"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/space_8dp"
            android:paddingRight="@dimen/space_8dp"
            android:paddingTop="@dimen/space"
            android:paddingBottom="@dimen/space"
            android:text="@string/mypoistion"
            android:textSize="@dimen/textsize_xxsmall"
            android:textColor="@color/black"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/seperator"
            android:layout_width="@dimen/line_height1"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/car_name"
            android:layout_marginTop="@dimen/space"
            android:background="#d9d9d9"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/gotoMonitor"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_toRightOf="@id/seperator"
            android:paddingLeft="@dimen/space_8dp"
            android:text="@string/look_it"
            android:textSize="@dimen/textsize_xxsmall"
            android:textColor="@color/color_main"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:drawableRight="@drawable/arrow_right"
            android:background="@color/transparent"
            android:visibility="gone"/>
    </RelativeLayout>


    <View
        android:id="@+id/interval"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:visibility="gone"/>
</LinearLayout>