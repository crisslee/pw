<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogutil_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:padding="@dimen/space_3x"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners_bg"
        android:padding="@dimen/space_2dp"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/dialogutil_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_2x"
        android:layout_marginTop="@dimen/space_2x"
        android:gravity="center"
        android:text="@string/hint"
        android:textColor="@color/color_text_h"
        android:textSize="@dimen/text_xl" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seperator_thin"
        android:background="@color/color_seperator" />

    <TextView
        android:id="@+id/dialogutil_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_4x"
        android:layout_marginLeft="@dimen/space_4x"
        android:layout_marginRight="@dimen/space_4x"
        android:layout_marginTop="@dimen/space_4x"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_text_h"
        android:textSize="@dimen/text_l" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seperator_thin"
        android:background="@color/color_seperator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialogutil_btn1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/space_2x"
            android:paddingTop="@dimen/space_2x"
            android:text="@string/cancel"
            android:textColor="@color/color_text_h"
            android:textSize="@dimen/text_l"/>

        <TextView
            android:id="@+id/dialogutil_btn2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/color_main"
            android:gravity="center"
            android:paddingBottom="@dimen/space_2x"
            android:paddingTop="@dimen/space_2x"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_l"
            android:visibility="gone" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>