<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_3x"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDevName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="@dimen/space_3x"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_m_x"/>

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="@dimen/space_3x"
            android:textColor="@color/text_black"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_s"/>

        <TextView
            android:id="@+id/textViewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:maxLines="1"
            android:paddingTop="@dimen/space_3x"
            android:paddingRight="@dimen/space_3x"
            android:paddingLeft="@dimen/space_3x"
            android:gravity="center_vertical"
            android:text="@string/detail"
            android:textSize="@dimen/text_m"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_3x"
        android:paddingBottom="@dimen/space_3x"
        android:paddingRight="@dimen/space_3x"
        android:textColor="@color/text_mid"
        android:layout_marginTop="@dimen/space"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_m"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/space_3x"
        android:background="@color/divider"/>

</LinearLayout>

