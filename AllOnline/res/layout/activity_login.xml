<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/space_4x"
    android:paddingRight="@dimen/space_4x"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:text="@string/register"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_xl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_17x"
        android:text="@string/login_by_account_pwd"
        android:textColor="@color/text_black"
        android:textSize="@dimen/titletext_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_2x"
        android:text="@string/login_statement"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        />

    <EditText
        android:id="@+id/phoneOrImei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_7x"
        android:hint="@string/login_account_hint"
        android:textSize="@dimen/textsize"
        android:background="@drawable/edittext_bg_line"
        android:inputType="text"
        android:paddingBottom="@dimen/space_2x"
        android:paddingTop="@dimen/space_2x"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statement"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5x"
        android:hint="@string/login_pwd_hint"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/space_2x"
        android:paddingTop="@dimen/space_2x"
        android:background="@drawable/edittext_bg_line"
        android:textSize="@dimen/textsize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneOrImei"
        />

    <TextView
        android:id="@+id/getCaptcha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/space_2x"
        android:text="@string/register_get_captcha"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textsize"
        app:layout_constraintBaseline_toBaselineOf="@id/password"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_7x"
        android:background="@drawable/login_btn_disable"
        android:gravity="center"
        android:paddingBottom="11dp"
        android:paddingTop="11dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        />

    <TextView
        android:id="@+id/forgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_3x"
        android:text="@string/forget_password"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_s"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        />

    <TextView
        android:id="@+id/loginByCaptcha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_3x"
        android:text="@string/login_by_captcha"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_s"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/forgetPwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        />

    <TextView
        android:id="@+id/loginByOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_17dp"
        android:text="@string/login_by_other"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_s"
        app:layout_constraintBottom_toTopOf="@+id/imageWx"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintVertical_bias="1.0"
        />

    <ImageView
        android:id="@+id/imageWx"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/space_10x"
        android:layout_marginLeft="@dimen/space_16x"
        android:src="@drawable/login_wx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageQr"
        />

    <ImageView
        android:id="@+id/imageQr"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/space_10x"
        android:layout_marginRight="@dimen/space_16x"
        android:src="@drawable/login_qr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageWx"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>