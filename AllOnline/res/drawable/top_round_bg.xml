        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />

            <corners
                android:topLeftRadius="@dimen/space_2x"
                android:topRightRadius="@dimen/space_2x" />

        </shape>
    </item>
</layer-list>